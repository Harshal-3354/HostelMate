    <style>
        /* Hero Section */
.hero {
    background: linear-gradient(to right, #007bff, #00c6ff);
}

/* Feature Boxes */
.feature-box {
    padding: 20px;
    background: white;
    border-radius: 8px;
    box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
    margin: 10px;
    transition: transform 0.3s ease-in-out;
}

.feature-box:hover {
    transform: scale(1.05);
}

.icon {
    font-size: 2rem;
    display: block;
    margin-bottom: 10px;
}

/* Review Carousel */
.review-box {
    max-width: 600px;
    background: #f9fafb;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
}

/* Call to Action */
.btn-success {
    padding: 12px 24px;
    font-size: 18px;
    font-weight: bold;
    border-radius: 8px;
}

    </style>

    <!-- Hero Section -->
    <section class="hero text-center text-white py-5">
        <h1 class="display-4 fw-bold">Welcome to <%= siteName %> üè®</h1>
        <p class="lead">Find your perfect hostel, quickly & easily!</p>
    </section>

    <!-- Why Choose Us Section -->
    <section class="container my-5">
        <h2 class="text-center fw-bold">Why Choose Us?</h2>
        <div class="row mt-4">
            <div class="col-md-3 text-center">
                <div class="feature-box">
                    <span class="icon">üè†</span>
                    <p>Verified & Safe Hostels</p>
                </div>
            </div>
            <div class="col-md-3 text-center">
                <div class="feature-box">
                    <span class="icon">üåç</span>
                    <p>Location-Based Search</p>
                </div>
            </div>
            <div class="col-md-3 text-center">
                <div class="feature-box">
                    <span class="icon">üìä</span>
                    <p>Real Ratings & Reviews</p>
                </div>
            </div>
            <div class="col-md-3 text-center">
                <div class="feature-box">
                    <span class="icon">üí∞</span>
                    <p>Budget-Friendly Options</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Reviews Section -->
    <section class="container my-5">
        <h2 class="text-center fw-bold">What Our Users Say</h2>
        <div id="reviewCarousel" class="carousel slide mt-4" data-bs-ride="carousel">
            <div class="carousel-inner">
                <% reviews.forEach((review, index) => { %>
                    <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                        <div class="review-box mx-auto text-center">
                            <p class="fw-light">" <%= review.comment %> "</p>
                            <p class="fw-bold">- <%= review.user %></p>
                        </div>
                    </div>
                <% }) %>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#reviewCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon"></span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#reviewCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon"></span>
            </button>
        </div>
    </section>

    <!-- Call to Action -->
    <section class="text-center my-5">
        <h2 class="fw-bold">Ready to Book Your Stay?</h2>
        <a href="/listings" class="btn btn-success btn-lg mt-3">
            Find a Hostel Now
        </a>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>


