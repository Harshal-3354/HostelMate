<style>
    footer {
      background-color: #f8f9fa;
      padding: 1.5rem 0;
      border-top: 1px solid #dee2e6;
      font-size: 0.95rem;
    }
  
    .f-info {
      max-width: 1200px;
      margin: auto;
      display: flex;
      flex-wrap: wrap;
      justify-content: space-between;
      align-items: center;
      text-align: center;
      gap: 1rem;
      padding: 0 1rem;
    }
  
    .f-info-socials i {
      font-size: 1.5rem;
      margin: 0 0.5rem;
      color: #495057;
      transition: color 0.3s;
    }
  
    .f-info-socials i:hover {
      color: #007bff;
    }
  
    .f-info-brand {
      font-weight: 600;
      color: #343a40;
    }
  
    .f-info-links a {
      margin: 0 0.5rem;
      color: #495057;
      text-decoration: none;
      transition: color 0.3s;
    }
  
    .f-info-links a:hover {
      color: #007bff;
    }
  
    @media (max-width: 768px) {
      .f-info {
        flex-direction: column;
      }
    }
  </style>
  
  <footer>
